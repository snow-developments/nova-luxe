{
  "clips": [
    {
      "name": "luxe clips",
      "children": [
        {
          "content": "class $0 {\n  $1\n}",
          "name": "class",
          "scope": "editor",
          "syntax": "wren",
          "trigger": "class"
        },
        {
          "content": "$0($1) {\n  $2\n}",
          "name": "method",
          "scope": "editor",
          "syntax": "wren",
          "trigger": "def"
        },
        {
          "content": "$0 {\n  $1\n}",
          "name": "getter",
          "scope": "editor",
          "syntax": "wren",
          "trigger": "getter"
        },
        {
          "content": "$0=(${1:value}) {\n  $2\n}",
          "name": "setter",
          "scope": "editor",
          "syntax": "wren",
          "trigger": "setter"
        },
        {
          "content": "material = {\n  basis = \"${2:luxe: material_basis/sprite_pixelated}\"\n  inputs = { sprite.image = \"image/$1\" }\n}",
          "name": "material",
          "scope": "editor",
          "syntax": "luxe",
          "trigger": "material"
        },
        {
          "content": "modifier = {\n  script = \"modifier/$0\"\n  description = \"Makes an entity ${2:different}.\"\n  field = \"$0\"\n  display = \"$1\"\n  class = \"$1\"\n  block = {\n    fields = [\n      { name=\"size\" type=\"number\" default=0 }\n    ]\n  }\n}",
          "name": "custom modifier",
          "scope": "editor",
          "syntax": "luxe",
          "trigger": "mod"
        }
      ]
    }
  ]
}
